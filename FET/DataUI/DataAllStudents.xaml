                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtBoxMaxHoursDaily"/>
                    <telerik:RadButton Grid.Row="1" Grid.Column="2" Content="{DynamicResource add}" ></telerik:RadButton>

