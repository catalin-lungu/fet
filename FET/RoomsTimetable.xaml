<Window x:Class="FET.RoomsTimetable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        WindowStartupLocation="CenterOwner"
        Title="{DynamicResource roomsTimetable}" SizeToContent="WidthAndHeight" Width="Auto" Height="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="list" Grid.Row="0" MinWidth="150" HorizontalAlignment="Left" SelectionChanged="list_SelectionChanged">

        </ComboBox>

        <DataGrid Grid.Row="1" x:Name="timetable"/>
    </Grid>
</Window>
