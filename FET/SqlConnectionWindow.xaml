<Controls:MetroWindow x:Class="FET.SqlConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        WindowStartupLocation="CenterOwner"
        Title="{DynamicResource exportDatabase}" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{DynamicResource connectionString}"></Label>
        <TextBox Grid.Row="1" Margin="0,0,10,10" x:Name="connectionString" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Button Grid.Row="2" Content="{DynamicResource ok}" Click="OK_Click" Margin="10,0,0,0" HorizontalAlignment="Left" RenderTransformOrigin="-7.636,0.409" Width="115"></Button>
        <Button Grid.Row="2" Content="{DynamicResource cancel}" Click="Cancel_Click" Margin="267,0,10,0"></Button>
    </Grid>
</Controls:MetroWindow>
